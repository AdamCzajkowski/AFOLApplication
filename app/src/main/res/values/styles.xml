<resources>

    <!-- App themes. -->
    <!-- Dark application theme. -->
    <style name="DarkThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="actionBarStyle">@style/Theme.AppCompat</item>
    </style>

    <!-- Fonts. -->
    <style name="ExoFont" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="ToolbarExoFont">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <!-- Texts. -->
    <style name="GrayedOutText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="ExoFontWhiteBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsActivityToolbarText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ExoFontWhiteBoldShadowed" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@fon</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="FieldNameTxtSize" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <!-- Toolbars -->
    <style name="DarkToolbarStyle">
        <item name="android:background">@color/titleBackground</item>
    </style>

    <!-- styles.xml -->
    <style name="DetailsActivityToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <!-- Buttons. -->
    <style name="FavouritesFab" parent="Widget.Design.FloatingActionButton">
        <item name="maxImageSize">@dimen/maxFabImageSize</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
